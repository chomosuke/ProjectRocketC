<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/background_dark</item>
        <item name="colorPrimaryDark">@android:color/background_dark</item>
        <item name="colorAccent">@android:color/background_dark</item>
    </style>

    <!-- Your AppTheme or other themes/styles here -->

    <!-- The launcher theme. It sets the main window background to the launch_screen drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowEnterAnimation">@anim/fade_in_splash_image</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
         <item name="colorPrimaryDark">@android:color/background_dark</item>
    </style>

    <style name="MButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">13.8dp</item>
        <item name="android:paddingEnd">13.8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowRadius">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowColor">#000</item>
    </style>

    <style name="MSeekBar" parent="android:Widget.SeekBar">
        <item name="android:maxWidth">200dp</item>
        <item name="android:thumb">@drawable/seek_bar_thumb</item>
        <item name="android:progressDrawable">@drawable/seek_bar_progress</item>
        <item name="android:maxHeight">5dp</item>
        <item name="android:minHeight">5dp</item>
    </style>
    
    <style name="shadow">
        <item name="android:shadowRadius">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowColor">#000</item>
    </style>

</resources>
