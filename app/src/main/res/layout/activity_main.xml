<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motherView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.chomusukestudio.projectrocketc.UI.MainActivity">

    <ImageView
        android:id="@+id/chomusukeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_chomusuke_anh_nger_vorschau"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <view
        android:id="@+id/MyGLSurfaceView"
        class="com.chomusukestudio.projectrocketc.UI.MyGLSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--  preGame  -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/preGameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/settingButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/setting_button"
            android:background="@android:color/transparent"
            android:onClick="openSetting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/image_button_background"
            android:padding="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/play_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.72"
            android:onClick="startGame"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/swapRocketLeftButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:src="@drawable/left_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="swapRocketLeft"/>

        <ImageButton
            android:id="@+id/swapRocketRightButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/right_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="swapRocketRight"/>

    </android.support.constraint.ConstraintLayout>

<!--  inGame  -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/inGameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/visualText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:typeface="normal"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/image_button_background"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/pause_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onPause"/>
    
        <TextView
            android:id="@+id/deltaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Î´ "
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

<!--  setting  -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/settingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            android:src="@drawable/black"  />

        <ImageButton
            android:id="@+id/closeSettingButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/back_button"
            android:background="@android:color/transparent"
            android:onClick="closeSetting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sound_effects_volume"
            android:textColor="#FFF"
            android:layout_marginStart="32dp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@id/soundEffectsVolumeBar"
            app:layout_constraintTop_toTopOf="@id/soundEffectsVolumeBar" />

        <SeekBar
            android:id="@+id/soundEffectsVolumeBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp"
            style="@style/MSeekBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/tutorialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tutorial"
            style="@style/MButton"
            app:layout_constraintVertical_bias="0.75"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="showTutorial"/>

    </android.support.constraint.ConstraintLayout>

<!--  onPaused  -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/onPausedLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:alpha="0.5"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/black"  />-->

        <ImageButton
            android:id="@+id/resumeButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/image_button_background"
            android:padding="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/play_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.72"
            android:onClick="onPause"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/restartButtonPaused"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/image_button_background"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/restart_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/settingButtonPaused"
            app:layout_constraintStart_toEndOf="@id/toHomeButtonPaused"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            android:onClick="restartGame"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/toHomeButtonPaused"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/image_button_background"
            android:padding="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/to_home_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/restartButtonPaused"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"
            android:onClick="toHome"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/settingButtonPaused"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/image_button_background"
            android:padding="19dp"
            android:scaleType="centerInside"
            app:layout_constraintVertical_bias="0.9"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/setting_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/restartButtonPaused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="openSetting" />

    </android.support.constraint.ConstraintLayout>

<!--  onCrash  -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/onCrashLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="restartGame"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_restart"
            android:textSize="20sp"
            android:textColor="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9"/>

        <TextView
            android:id="@+id/previousScoreOnCrashTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:text="@string/score"
            app:layout_constraintBottom_toTopOf="@+id/previousScoreOnCrash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        
        <TextView
            android:id="@+id/previousScoreOnCrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.35" />
    
        <TextView
            android:id="@+id/highestScoreOnCrashTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:text="@string/highest_score"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@id/highestScoreOnCrash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/highestScoreOnCrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="25.5sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@id/previousScoreOnCrashTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/settingButtonOnCrash"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="22dp"
            android:background="@drawable/image_button_background"
            android:scaleType="centerInside"
            android:src="@drawable/setting_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75"
            android:onClick="openSetting"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:id="@+id/toHomeButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="23dp"
            android:background="@drawable/image_button_background"
            android:scaleType="centerInside"
            android:src="@drawable/to_home_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            android:onClick="toHome"
            android:clickable="true"
            android:focusable="true" />

    </android.support.constraint.ConstraintLayout>

<!--  scores  -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/scoresLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize"
            android:typeface="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/highestScoreIcon"
            android:layout_width="@dimen/textSize"
            android:layout_height="@dimen/textSize"
            android:layout_marginStart="2dp"
            android:baselineAlignBottom="true"
            android:scaleType="fitCenter"
            android:src="@drawable/highest_score_icon"
            app:layout_constraintBaseline_toBaselineOf="@id/highestScoreTextView"
            app:layout_constraintStart_toEndOf="@id/highestScoreTextView" />

        <TextView
            android:id="@+id/highestScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize"
            android:typeface="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

<!--  tutorial  -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/tutorialGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/black"  />

        <android.support.v4.view.ViewPager
            android:id="@+id/tutorialPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/finishTutorialButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MButton"
                android:text="@string/finish_tutorial"
                android:layout_margin="24dp" />

        </android.support.v4.view.ViewPager>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>